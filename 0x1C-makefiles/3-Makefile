# Makefile for the "school" program

# Compiler
CC := gcc

# Source files
SRC := main.c school.c

# Object files
OBJ := $(SRC:.c=.o)

# Executable name
NAME := school

# Command to remove files
RM := rm -f

# Default target
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile source files into object files
%.o: %.c
	$(CC) -c $< -o $@

# Clean rule: Delete temporary files and the executable
clean:
	$(RM) *~ $(NAME)

# Object clean rule: Delete object files
oclean:
	$(RM) $(OBJ)

# Full clean rule: Delete temporary files, the executable, and object files
fclean: clean oclean

# Recompile all source files
re: fclean all

# Declare phony targets to prevent conflicts with file names
.PHONY: all clean oclean fclean re
